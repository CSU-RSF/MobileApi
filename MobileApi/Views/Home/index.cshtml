<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Puma App</title>
</head>
<body>
    <div>
        <img src="~/images/sample-1.jpg">
    </div>
    <div>
        <h2>All Pumas</h2>
        <ul id="pumas" />
    </div>
    <div>
        <h2>Search by ID</h2>
        <input type="text" id="puma_id" size="5" />
        <input type="button" value="Search" onclick="find();" />
        <p id="puma" />
    </div>

    <div>
        <h2>Sync Data</h2>
        <input type="button" value="Sync" onclick="getData();" />
    </div>


    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script>
        var uri = '/api/pumas';
    

    $(document).ready(function () {
      // Send an AJAX request
      $.getJSON(uri)
          .done(function (data) {
            // On success, 'data' contains a list of Pumas.
            $.each(data, function (key, item) {
              // Add a list item for the Puma.
              $('<li>', { text: formatItem(item) }).appendTo($('#pumas'));
            });
          });

        // Send an AJAX request
      $.getJSON(uri)
          .done(function (data) {
              // On success, 'data' contains a list of Pumas.
              $.each(data, function (key, item) {
                  // Add a list item for the Puma.
                  $('<li>', { text: formatItem(item) }).appendTo($('#pumas'));
              });
          });


    });

    function formatItem(item) {
      return item.Name;
    }

    function find() {
      var id = $('#puma_id').val();
      $.getJSON(uri + '/' + id)
          .done(function (data) {
            $('#puma').text(formatItem(data));
          })
          .fail(function (jqXHR, textStatus, err) {
            $('#puma').text('Error: ' + err);
          });
    }

    function getData() {
      
        $.getJSON('/api/uploadData')
            .done(function (data) {
                $('#puma').text(formatItem(data));
            })
            .fail(function (jqXHR, textStatus, err) {
                $('#puma').text('Error: ' + err);
            });
    }
    </script>
</body>
</html>